{
	"name": "beta-backend-lib",
	"version": "1.0.0",
	"description": "main working library for backend development",
	"main": "build/main/server.js",
	"typings": "build/main/server.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Card-Line-Sports/beta-backend.git"
	},
	"license": "MIT",
	"keywords": [],
	"scripts": {
		"build": "del build && tsc -p tsconfig.json && browserify build/main/public/App.js -o build/main/public/appBundle.js --im",
		"build:watch": "del build && tsc -p tsconfig.json --watch",
		"postbuild": "cpy 'src/public/*.html' 'build/main/public/'",
		"test-ts": "ts-mocha -p tsconfig.testing.json src/test/*",
		"start": "npm run build && node ."
	},
	"engines": {
		"node": ">=10"
	},
	"dependencies": {
		"@babel/plugin-transform-modules-commonjs": "^7.18.6",
		"@bitauth/libauth": "^1.17.1",
		"@types/socket.io": "^3.0.2",
		"async_hooks": "^1.0.0",
		"axios": "^0.27.2",
		"chai": "^4.3.6",
		"cheerio": "^1.0.0-rc.12",
		"express": "^4.18.1",
		"jquery": "^3.6.0",
		"socket.io": "^4.5.1",
		"socket.io-client": "^4.5.1"
	},
	"devDependencies": {
		"@types/chai": "^4.3.1",
		"@types/express": "^4.17.13",
		"@types/jquery": "^3.5.14",
		"@types/mocha": "^9.1.1",
		"@types/node": "^18.6.2",
		"@types/socket.io-client": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^4.0.1",
		"@typescript-eslint/parser": "^4.0.1",
		"browserify": "^17.0.0",
		"cpy-cli": "^4.1.0",
		"cspell": "^4.1.0",
		"cz-conventional-changelog": "^3.3.0",
		"del-cli": "^5.0.0",
		"eslint": "^7.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-functional": "^3.0.2",
		"eslint-plugin-import": "^2.22.0",
		"npm-run-all": "^4.1.5",
		"open-cli": "^6.0.1",
		"prettier": "^2.1.1",
		"standard-version": "^9.0.0",
		"ts-mocha": "^10.0.0",
		"ts-node": "^9.0.0",
		"tslint": "^6.1.3",
		"typedoc": "^0.19.0",
		"typescript": "^4.0.2"
	},
	"files": [
		"build/main",
		"build/module",
		"!**/*.spec.*",
		"!**/*.json",
		"CHANGELOG.md",
		"LICENSE",
		"README.md"
	],
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"prettier": {
		"singleQuote": true
	}
}
