{
	"name": "beta-backend-lib",
	"version": "1.0.0",
	"description": "main working library for backend development",
	"main": "build/main/index.js",
	"typings": "build/main/index.d.ts",
	"module": "build/module/index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Card-Line-Sports/beta-backend.git"
	},
	"license": "MIT",
	"keywords": [],
	"scripts": {
		"build": "run-p build:*",
		"build:main": "tsc -p tsconfig.json --watch",
		"fix": "run-s fix:*",
		"fix:prettier": "prettier \"src/**/*.ts\" --write",
		"fix:lint": "eslint src --ext .ts --fix",
		"test-ts": "ts-mocha -p tsconfig.testing.json src/test/*",
		"watch:build": "tsc -p tsconfig.json -w",
		"cov": "run-s build test:unit cov:html cov:lcov && open-cli coverage/index.html"
	},
	"engines": {
		"node": ">=10"
	},
	"dependencies": {
		"@bitauth/libauth": "^1.17.1",
		"axios": "^0.27.2",
		"chai": "^4.3.6",
		"cheerio": "^1.0.0-rc.12"
	},
	"devDependencies": {
		"@types/chai": "^4.3.1",
		"@types/mocha": "^9.1.1",
		"@typescript-eslint/eslint-plugin": "^4.0.1",
		"@typescript-eslint/parser": "^4.0.1",
		"codecov": "^3.5.0",
		"cspell": "^4.1.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-functional": "^3.0.2",
		"eslint-plugin-import": "^2.22.0",
		"gh-pages": "^3.1.0",
		"npm-run-all": "^4.1.5",
		"open-cli": "^6.0.1",
		"prettier": "^2.1.1",
		"standard-version": "^9.0.0",
		"ts-mocha": "^10.0.0",
		"ts-node": "^9.0.0",
		"typedoc": "^0.19.0",
		"typescript": "^4.0.2"
	},
	"files": [
		"build/main",
		"build/module",
		"!**/*.spec.*",
		"!**/*.json",
		"CHANGELOG.md",
		"LICENSE",
		"README.md"
	],
	"ava": {
		"failFast": true,
		"timeout": "60s",
		"typescript": {
			"rewritePaths": {
				"src/": "build/main/"
			}
		},
		"files": [
			"!build/module/**"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"prettier": {
		"singleQuote": true
	},
	"nyc": {
		"extends": "@istanbuljs/nyc-config-typescript",
		"exclude": [
			"**/*.spec.js"
		]
	}
}
